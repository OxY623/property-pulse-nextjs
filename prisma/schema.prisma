generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String     @id @default(cuid())  
  email      String     @unique
  username   String
  image      String?    
  bookmarks  Property[] 
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Property {
  id  String   @id @default(uuid())
  bookmarkedBy User[]
  ownerId String
  name String
  type String
  description String?
  street String?
  city String?
  state String?
  zipcode String?
  beds Int?
  baths Int?
  squareFeet Int?
  amenities String[]
  images String []
  
  nightlyRate Int?
  weeklyRate  Int?
  monthlyRate Int?

  sellerName  String?
  sellerEmail String?
  sellerPhone String?

  isFeatured  Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pulse       PropertyPulse?

}

model PropertyPulse {
  id           Int      @id @default(autoincrement())
  propertyId   String   @unique

  views        Int      @default(0)
  likes        Int      @default(0)
  bookings     Int      @default(0)

  property     Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
